---
import Footer from '@sections/Footer.astro'
import Header from '@sections/Header.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='Descubre los mejores productos para tu automóvil en el sitio web oficial de Bardahl. Encuentra repuestos de calidad, aceites de alto rendimiento y soluciones avanzadas para el cuidado de tu vehículo. Mejora el desempeño y prolonga la vida útil de tu motor con la tecnología de Bardahl.'
    />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/logo.webp' />
    <meta name='generator' content={Astro.generator} />
    <meta
      name='keywords'
      content='Bardahl, repuestos para autos, aceites, productos para automóviles'
    />
    <meta name='author' content='Bongiovanni Ivan' />
    <meta name='robots' content='index, follow' />
    <meta name='theme-color' content='#000000' />
    <title>{title} - Sitio web de Bardahl</title>
  </head>
  <body class='container mx-auto overflow-x-hidden w-full h-full p-0 m-0 box-border'>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
