---
import Container from './Container.astro'
import Layout from './Layout.astro'
// 1. La prop frontmatter da acceso al frontmatter y otros datos
const { frontmatter } = Astro.props
const { image, title, descripcion, listaDeConsejos, callToAction } = frontmatter
---

<Layout title={title}>
  <Container class='py-0 px-2 lg:px-8' classSection='py-5'>
    <div
      class='bg-white min-h-screen w-full flex flex-col justify-center gap-10 overflow-hidden lg:flex-row lg:gap-5 lg:justify-between'
    >
      <img
        src={image}
        alt={descripcion}
        class='mx-auto object-cover max-h-96 max-w-md rounded-lg'
      />
      <div
        class='w-full lg:w-auto px-8 prose lg:prose-xl flex flex-col gap-5 items-start justify-center'
      >
        <h3 class='font-bold text-2xl lg:text-3xl'>{title}</h3>
        <p class='font-light text-base'>{descripcion}</p>
        <section class='flex flex-col gap-5 lg:gap-6 lg:max-w-lg items-start'>
          <h3 class='text-2xl font-bold'>Consejos</h3>

          <ul class='flex items-start flex-col justify-center gap-5'>
            {
              listaDeConsejos.map((consejo) => (
                <li class='font-light leading-9 lg:leading-6 list-item list-disc'>
                  <span class='font-bold capitalize'>{consejo.title}:</span>
                  {consejo.description}
                </li>
              ))
            }
          </ul>
        </section>
      </div>
    </div>
  </Container>
</Layout>
