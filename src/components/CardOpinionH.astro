---
interface Reviews {
  name: string
  comment: string
  src: string
}

interface Props {
  opinion: Reviews
  indice: number
}
const { opinion, indice } = Astro.props
---

<article
  class={`max-w-md bg-white relative px-8 py-5 flex flex-col gap-5 items-start drop-shadow-lg ${
    indice > 0 && indice < 2 && 'lg:ml-48'
  }  ${indice === 2 && 'lg:ml-16'}  hover:shadow-2xl transform duration-150 rounded-lg `}
>
  <img
    loading='lazy'
    class='absolute top-0 left-0'
    width='30'
    height='20'
    src='/icons/quote.svg'
    alt='dos comillas negras de comentarios'
  />
  <section class='flex justify-end items-center gap-3'>
    <p class='font-light text-xs'>{opinion.comment}</p>
    <div class='rounded-full'>
      <img loading='lazy' width='100' height='100' src={opinion.src} alt={opinion.comment} />
    </div>
  </section>
  <span class='font-bold'>{opinion.name}</span>
</article>
