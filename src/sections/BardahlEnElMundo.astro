---
import { productHighlights } from '@src/data/jsonInfo.json'
const bardahlWord = productHighlights[0]
---

<section class='flex flex-col justify-center items-center gap-10 w-full mb-10 lg:py-10 px-8'>
  <section class='flex flex-col gap-10 max-w-lg items-start'>
    <div class='flex flex-col items-start gap-6'>
      <p class='font-light text-sm'>Destaca con nuestros internacionales</p>
      <h3 class='text-4xl font-bold'>{bardahlWord.name}</h3>
      <div class='flex justify-center gap-5'>
        <p class='font-light text-sm border-r-2 border-yellow-400 border-dashed'>
          {bardahlWord.description[0]}
        </p>
        <p class='font-light text-sm'>
          {bardahlWord.description[1]}
        </p>
      </div>
    </div>
  </section>

  <section class='flex flex-col items-start justify-center gap-10'>
    <img
      loading='lazy'
      width='1280'
      height='720'
      src={bardahlWord.image}
      alt={bardahlWord.description[0]}
    />
  </section>
</section>
