---
import ButtonPrimary from '@comp/ButtonPrimary.astro'
import CardOpinionH from '@comp/CardOpinionH.astro'
import Heading from '@comp/Heading.astro'
import Container from '@layouts/Container.astro'
import { whyBuyBardahl, opinions } from '@src/data/jsonInfo.json'
---

<section class='flex flex-col lg:flex-row justify-center gap-10 w-full py-5 px-8'>
  <section class='flex flex-col gap-10 max-w-lg items-start'>
    <div>
      <p class='font-light text-sm'>Destaca con nuestra mercanc√≠a</p>
      <h3 class='text-4xl font-bold'>{whyBuyBardahl.title}</h3>
    </div>

    <ul class='flex items-start flex-col justify-center gap-5'>
      {
        whyBuyBardahl.reasons
          .slice(0, 5)
          .map((reason) => <li class='font-light list-item list-disc'>{reason}</li>)
      }
    </ul>

    <ButtonPrimary />
  </section>

  <section class='flex flex-col items-start justify-center gap-10'>
    <!-- cards testimonios -->
    {
      opinions.reviews.slice(0, 3).map((op, indx) => {
        return <CardOpinionH opinion={op} indice={indx} />
      })
    }
  </section>
</section>
